{
  "name": "nebras-erp-pro",
  "version": "3.1.0",
  "author": "Islam Hedia <islam.hediaa@gmail.com>",
  "description": "نظام نِـبـراس ERP المتكامل - النسخة الاحترافية",
  "main": "main-loader.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "vercel-build": "npm install && vite build",
    "preview": "vite preview",
    "server": "node server.js",
    "start": "node server.js",
    "electron": "set \"ELECTRON_RUN_AS_NODE=\" && electron .",
    "dist": "npm run build && set ELECTRON_RUN_AS_NODE=1 && electron compile.js && electron-builder build --win --x64"
  },
  "build": {
    "appId": "com.nebras.erp.pro",
    "productName": "نِـبـراس المحاسبي ERP",
    "copyright": "Copyright © 2026 Islam Hedia",
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "نِـبـراس المحاسبي ERP"
    },
    "directories": {
      "output": "dist-v5"
    },
    "files": [
      "vercel_output/**/*",
      "services/**/*",
      "main.js",
      "main.jsc",
      "main-loader.js",
      "package.json",
      "initial_database.json",
      "logo.jfif",
      "splash.html"
    ]
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "bytenode": "^1.5.7",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "i18next": "^25.7.4",
    "i18next-browser-languagedetector": "^8.2.0",
    "lucide-react": "^0.562.0",
    "mysql2": "^3.16.1",
    "node-fetch": "^2.7.0",
    "node-zklib": "^1.3.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-i18next": "^16.5.1",
    "rebuild": "^0.1.2",
    "recharts": "^3.6.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.23",
    "electron": "^39.2.7",
    "electron-builder": "^24.13.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.4.0",
    "vite": "^7.3.1"
  }
}
